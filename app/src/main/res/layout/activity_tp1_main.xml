<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TP1.TP1Main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">

        <TextView
            android:textColor="@color/Pink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bienvenue sur le TP1"
            app:autoSizeTextType="none" />
        <TextView
            android:textColor="@color/Pink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Veuillez cliquer sur un boutons pour acceder Ã  la partie choisi :"
            app:autoSizeTextType="none" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="238dp" />

        <Button
            android:backgroundTint="@color/Pink"
            android:id="@+id/Partie1TP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|clip_vertical|center_horizontal"
            android:text="Partie 1" />

        <Button
            android:backgroundTint="@color/Pink"
            android:id="@+id/Partie2TP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|clip_vertical|center_horizontal"
            android:text="Partie 2" />

        <Button
            android:backgroundTint="@color/Pink"
            android:id="@+id/Partie3TP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|clip_vertical|center_horizontal"
            android:text="Partie 3"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>